<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="dashboard_template" name="Dashboard SFEC">
        <t t-call="web.layout">
            <div class="oe_structure">
                <section class="container">
                    <h2 class="mt-4 mb-4">Tableau de Bord SFEC</h2>

                    <!-- Indicateurs -->
                    <div class="row text-center mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5>Commandes en cours</h5>
                                    <p>123</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h5>Stock critique</h5>
                                    <p>14</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5>Factures impayées</h5>
                                    <p>3.540.000 FCFA</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5>Partenaires exclusifs</h5>
                                    <p>5</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Graphiques -->
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5>Évolution des ventes</h5>
                                </div>
                                <div class="card-body">
                                    <img src="/gestion_comptable_sfec/static/src/img/graph_ventes.png" class="img-fluid"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5>Top fournisseurs</h5>
                                </div>
                                <div class="card-body">
                                    <img src="/gestion_comptable_sfec/static/src/img/graph_fournisseurs.png" class="img-fluid"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions rapides -->
                    <div class="text-center mb-5">
                        <a href="#" class="btn btn-primary mx-2"><i class="fa fa-plus"></i> Nouvelle commande</a>
                        <a href="#" class="btn btn-success mx-2"><i class="fa fa-money"></i> Nouveau paiement</a>
                        <a href="#" class="btn btn-warning mx-2"><i class="fa fa-bell"></i> Relancer clients</a>
                    </div>

                    <!-- Liste d’alertes -->
                    <div class="card">
                        <div class="card-header bg-danger text-white">
                            <h5>Alertes</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Description</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2025-06-25</td>
                                        <td>Critique</td>
                                        <td>Stock bas pour Article X</td>
                                        <td><span class="badge bg-danger">Urgent</span></td>
                                    </tr>
                                    <tr>
                                        <td>2025-06-20</td>
                                        <td>Avertissement</td>
                                        <td>Client en retard de paiement</td>
                                        <td><span class="badge bg-warning">À relancer</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </section>
            </div>
        </t>
    </template>
</odoo>
