<odoo>
    <record id="view_ligne_commande_client_form" model="ir.ui.view">
        <field name="name">ligne.commande.client.form</field>
        <field name="model">gestion_comptable_sfec.ligne_commande_client</field>
        <field name="arch" type="xml">
            <form string="Ligne de commande">
                <sheet>
                    <group>
                        <field name="article_id"/>
                        <field name="quantite"/>
                        <field name="prix_unitaire"/>
                        <field name="total" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ligne_commande_client_tree" model="ir.ui.view">
        <field name="name">ligne.commande.client.tree</field>
        <field name="model">gestion_comptable_sfec.ligne_commande_client</field>
        <field name="arch" type="xml">
            <tree string="Lignes de commande">
                <field name="article_id"/>
                <field name="quantite"/>
                <field name="prix_unitaire"/>
                <field name="total" readonly="1"/>
            </tree>
        </field>
    </record>
</odoo>
