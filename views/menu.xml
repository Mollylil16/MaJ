    <record id="action_dashboard_web" model="ir.actions.act_url">
        <field name="name">Dashboard Web</field>
        <field name="url">/gestion_comptable_sfec/dashboard</field>
        <field name="target">self</field>
    </record>

    <!-- ✅ NOUVEL ACCÈS TABLEAU DE BORD WEB -->
