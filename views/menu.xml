              name="Tableau de bord (Vue Web)"
              parent="menu_custom_client_root"
              action="action_dashboard_web"
              sequence="80"/>

    
    <record id="action_drag_drop_client" model="ir.actions.act_url">
    <field name="name">Zone Drag &amp; Drop</field>
    <field name="url">/gestion_comptable_sfec/dashboard</field>
    <field name="target">self</field>
    </record>

    <menuitem id="menu_drag_drop_client" name="Glisser-Déposer" parent="menu_custom_client_root" action="action_drag_drop_client" sequence="70"/>

